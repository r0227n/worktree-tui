{
  "$schema": "https://dprint.dev/schemas/v0.json",
  "lineWidth": 100,
  "indentWidth": 2,
  "useTabs": false,
  "newLineKind": "lf",

  "markdown": {
    "lineWidth": 100,
    "textWrap": "maintain"
  },

  "toml": {
    "lineWidth": 100,
    "indentWidth": 2,
    "useTabs": false
  },

  "yaml": {
    "indentWidth": 2,
    "quotes": "preferDouble",
    "bracketSpacing": true,
    "formatComments": true
  },

  "malva": {
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "trailingComma": true
  },

  "includes": [
    "**/*.md",
    "**/*.yaml",
    "**/*.yml",
    "**/*.toml",
    "**/*.css"
  ],

  "excludes": [
    "node_modules",
    "dist",
    "coverage",
    "bun.lock",
    "**/CHANGELOG.md"
  ],

  "plugins": [
    "https://plugins.dprint.dev/markdown-0.17.8.wasm",
    "https://plugins.dprint.dev/toml-0.6.4.wasm",
    "https://plugins.dprint.dev/g-plane/pretty_yaml-v0.5.1.wasm",
    "https://plugins.dprint.dev/g-plane/malva-v0.11.1.wasm"
  ]
}
