{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "version": "0.2",
  "language": "en",
  "ignorePaths": [
    "node_modules",
    "dist",
    "coverage",
    "bun.lock",
    ".git",
    "*.min.js",
    "*.min.css"
  ],
  "words": [
    // --- VS Code Extensions ---
    "dbaeumer",
    "dprint",
    "eamodio",
    "errorlens",
    "esbenp",
    "hverlin",
    "kohler",
    "lefthook",
    "mise",
    "usernamehw",
    // --- 開発ツール／ユーティリティ ---
    "bunx",
    "malva",
    "noEmit",
    "opentui",
    "oxfmt",
    "oxlint",
    "oxfmtrc",
    "oxlintrc",
    "tsgolint",
    "typecheck",
    // --- プロジェクト/用語 ---
    "worktree",
    "worktrees"
  ],
  "dictionaries": [
    "typescript",
    "node",
    "npm",
    "bash"
  ],
  "enableFiletypes": [
    "typescript",
    "typescriptreact",
    "javascript",
    "javascriptreact",
    "json",
    "markdown",
    "yaml"
  ]
}